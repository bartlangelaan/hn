{
  "private": true,
  "workspaces": ["packages/*"],
  "devDependencies": {
    "@types/fetch-mock": "6.0.1",
    "@types/jest": "22.2.3",
    "@types/node": "9.6.6",
    "@types/prop-types": "15.5.2",
    "@types/react": "16.3.12",
    "@types/util-deprecate": "1.0.0",
    "babel-core": "6.26.0",
    "babel-jest": "22.4.3",
    "babel-plugin-transform-runtime": "6.23.0",
    "babel-preset-env": "1.6.1",
    "coveralls": "3.0.0",
    "del": "3.0.0",
    "fetch-mock": "6.3.0",
    "gulp": "3.9.1",
    "gulp-babel": "7.0.1",
    "gulp-rename": "1.2.2",
    "gulp-sourcemaps": "2.6.4",
    "gulp-typescript": "4.0.2",
    "jest": "22.4.3",
    "lerna": "2.11.0",
    "merge2": "1.2.1",
    "prettier": "1.11.1",
    "react": "16.3.2",
    "react-test-renderer": "16.3.2",
    "rimraf": "2.6.2",
    "semantic-release": "15.1.7",
    "semantic-release-monorepo": "6.0.1",
    "ts-jest": "22.4.4",
    "ts-node": "6.0.0",
    "tslint": "5.9.1",
    "tslint-config-airbnb": "5.8.0",
    "tslint-config-prettier": "1.12.0",
    "tslint-react": "3.5.1",
    "typescript": "2.8.3"
  },
  "scripts": {
    "build": "gulp build",
    "test": "tsc --noEmit && jest --coverage",
    "start": "gulp",
    "lint":
      "prettier '**/*.{js,ts,tsx,json,md}' -l && tslint '**/*.{js,ts,tsx}' -c tslint.json",
    "lint:fix":
      "prettier '**/*.{js,ts,tsx,json,md}' --write -l && tslint '**/*.{js,ts,tsx}' -c tslint.json --fix",
    "release":
      "lerna exec -- ../../node_modules/.bin/semantic-release -e semantic-release-monorepo"
  },
  "dependencies": {},
  "jest": {
    "collectCoverageFrom": ["packages/*/src/**/*.{js,ts,tsx}"],
    "coverageReporters": ["lcov", "text"],
    "transform": {
      "^.+\\.(j|t)sx?$": "ts-jest"
    },
    "testRegex": "src/.*(__tests__/.*|(\\.|/)(test|spec))\\.(j|t)sx?$",
    "moduleFileExtensions": ["ts", "tsx", "js", "json", "node"],
    "projects": ["<rootDir>/projects/*"]
  },
  "prettier": {
    "printWidth": 80,
    "singleQuote": true,
    "trailingComma": "all"
  }
}
